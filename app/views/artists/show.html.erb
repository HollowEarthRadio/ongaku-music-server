<p id="notice"><%= notice %></p>
<%= render 'nav' %>

<p>
  <b>Name:</b>
  <%= @artist.name %>
</p>

<h1>Albums</h1>
<p>
  <ul>
  <% @artist.albums.sort_by {|album| album.title }.each do |album| %>
    <li><%= link_to album.title, album %>
  <% end %>
  </ul>
</p>

<h1>Songs</h1>
<%= render "songs/songlist", :songs => @artist.songs %>
<br/>

<%= link_to 'Edit', edit_artist_path(@artist) %> |
<%= link_to 'Back', artists_path %>
